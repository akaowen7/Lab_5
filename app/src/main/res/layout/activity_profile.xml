<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivty">

    <TextView
        android:id="@+id/mainTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Choose Flag"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="200dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/Flag1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_ca" />

        <ImageView
            android:id="@+id/Flag2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_eg" />

        <ImageView
            android:id="@+id/Flag3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_fr" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageView
            android:id="@+id/Flag4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_jp" />

        <ImageView
            android:id="@+id/Flag5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_kr" />

        <ImageView
            android:id="@+id/Flag6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <ImageView
            android:id="@+id/Flag7"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_tr" />

        <ImageView
            android:id="@+id/Flag8"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_uk" />

        <ImageView
            android:id="@+id/Flag9"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginHorizontal="10dp"
            android:contentDescription="flag"
            android:onClick="SelectTeamIcon"
            tools:srcCompat="@drawable/flag_us" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>